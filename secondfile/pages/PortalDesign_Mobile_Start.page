    <script type="text/javascript">
        $(document).ready( function () {
            $("form input").not("[type='submit']").val("");
            $('#IRU_RegisterMultipleCustomers, #IRU_RegisterCustomer').on('hidden.bs.modal', function () {
                $("form input").not("[type='submit']").val("");
                $(".submit-button").attr("disabled","disabled");
                if(window.location.search){
                    window.location.search = "";
                }
            })

            $(".IRUMultipleCustomers").click(function () {
                $('#IRU_RegisterMultipleCustomers').modal('toggle');
            });

            $(".regCustomer").click(function () {
                $('#IRU_RegisterCustomer').modal('toggle');
                $(".existing-customer").hide();
                $(".new-customer").show();
                $(".iru-biz-name, .iru-email-domain1").attr("validate","required");
            });

            $(".updateCustomer").click(function () {
                $('#IRU_RegisterCustomer').modal('toggle');
                $(".new-customer").hide();
                $(".existing-customer").show();
                $(".iru-biz-name, .iru-email-domain").removeAttr("validate");
            });

              
            $(".stepTab").click( function () {
                var myId = $(this).attr("id");
                $(".stepCont").not("."+myId+"-cont").hide();
                $(".stepActive").not("."+myId+"-arrow").hide();
                $("."+myId+"-cont").show();
                $("."+myId+"-arrow").show();
            });
             $(".startClicked").click(function(){
                var linkTab = false;
                tabbedContent(linkTab);
            });
             
            $("#step31").on("click",function(){
            });
            $("#step31").trigger("click");
            var navPos = $("#step31").offset()
            var posTop = navPos.top - 80;
            $("html, body").animate({
                scrollTop: posTop
            },300);
            
            $(".startClicked").click(function(){
                var linkTab = true;
                tabbedContent(linkTab);
            });
           function  tabbedContent(linkTab){
                if(linkTab) {
                 $(".stepCont").hide();
                 $(".step31-cont").hide();
                    $(".stepActive").hide();
                   
               }
          };

        });
    </script>
