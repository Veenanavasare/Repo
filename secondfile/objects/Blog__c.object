    <validationRules>
        <fullName>Blog_Active_Validation</fullName>
        <active>true</active>
        <description>Checking all the Required Fields To make the Blog Active.</description>
        <errorConditionFormula>AND(
ISPICKVAL(Blog_Status__c, &quot;Active&quot;),

OR(
  Name=NULL,
  Blog_Summary_Short__c =NULL,
  Banner_Link__c =NULL
)

)</errorConditionFormula>
        <errorMessage>Blog name, Blog Summary and Banner are required to activate a Blog in Newsroom.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Blog_Feature_Validation</fullName>
        <active>true</active>
        <description>Checking all the Required Fields To make the Blog Active.</description>
        <errorConditionFormula>AND(
 Featured_Blog__c,
 Blog_Image_Link__c=NULL
)</errorConditionFormula>
        <errorMessage>Please upload an Blog image to mark the Blog as Featured</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Blog_Management_Rights</fullName>
        <active>true</active>
        <errorConditionFormula>NOT( $User.Blog_Manager__c ) &amp;&amp; $Profile.Name &lt;&gt; &quot;System Administrator&quot;</errorConditionFormula>
        <errorMessage>You are not authorized to create or modify Blogs.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Blog_Name_Validation</fullName>
        <active>true</active>
        <description>Blog_Name_Validation</description>
        <errorConditionFormula>IF(LEN(Name)&gt;30,true,false)</errorConditionFormula>
        <errorDisplayField>Name</errorDisplayField>
        <errorMessage>Please Enter Blog Name Less than 30 Characters.</errorMessage>
    </validationRules>
