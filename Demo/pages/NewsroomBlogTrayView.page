                                                <apex:outPutText value="{!rec.Name}" style="color:#067ab4;"/>
                                            </apex:outputLink>
                                        </div>
                                    </apex:outputPanel>
                                </apex:repeat>
                                    
                                    <div style="padding-left:8px;" class="ActiveTopic"> 
