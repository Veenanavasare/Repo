<apex:page controller="Custom_Add_Product_COntroller" tabStyle="Custom_Product__c" >
  <apex:form id="theForm"> 
     <apex:pageBlock >
       <apex:pageBlockSection title="Product Information" columns="2">
          <apex:selectList value="{!ProductName }" multiselect="false" label="Product Name" size="1">
            <apex:selectOption itemValue="--Select--" />
            <apex:selectOption itemValue="AVPN" />
            <apex:selectOption itemValue="MIS" />
          </apex:selectList>
          
          <apex:selectList value="{!AccessType}" multiselect="false" label="Access Type" size="1">
            <apex:selectOption itemValue="--Select--" />
            <apex:selectOption itemValue="Private Line" />
            <apex:selectOption itemValue="Enternet" />
          </apex:selectList>
          
          <apex:selectList value="{!Tier}" multiselect="false" label="Tier" size="1">
            <apex:selectOption itemValue="--Select--" />
            <apex:selectOption itemValue="Planitinum Gold" />
            <apex:selectOption itemValue="Planitinum Elite" />
          </apex:selectList>
          
          <apex:selectList value="{!Term}" multiselect="false" label="Term Length" size="1">
            <apex:selectOption itemValue="--Select--" />
            <apex:selectOption itemValue="12 months" />
            <apex:selectOption itemValue="24 months" />
            <apex:selectOption itemValue="26 months" />
          </apex:selectList>
          
          <apex:selectList value="{!Port}" multiselect="false" label="Access Port" size="1">
            <apex:selectOption itemValue="T1" />
            <apex:selectOption itemValue="2*T1" />
            <apex:selectOption itemValue="3*T1" />
            <apex:selectOption itemValue="4*T1" />
          </apex:selectList>
          
          <apex:selectList value="{!Speed}" multiselect="false" label="Acccess Speed" size="1">
            <apex:selectOption itemValue="T1" />
            <apex:selectOption itemValue="2*T1" />
            <apex:selectOption itemValue="3*T1" />
            <apex:selectOption itemValue="4*T1" />
          </apex:selectList>
          
          
          
       </apex:pageBlockSection>
        
     </apex:pageBlock>
  </apex:form>
</apex:page>