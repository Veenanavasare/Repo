    <validationRules>
        <fullName>Featured_Image_Validation</fullName>
        <active>true</active>
        <description>This validation rule is to make sure that there is an Topic image attached to a Topic record included in navigation as featured.</description>
        <errorConditionFormula>AND( ISPICKVAL( Include_in_Nav__c , &apos;Featured&apos;) , ISBLANK( Topic_Image_Link__c ) )</errorConditionFormula>
        <errorMessage>It is mandatory to have a Image for Topic marked as &apos;Featured&apos;.  Please upload a Topic Image.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Parent_Topic_Validation</fullName>
        <active>true</active>
        <errorConditionFormula>NOT( ISBLANK(  Parent_Topic__r.Parent_Topic__r.Parent_Topic__c  ) )</errorConditionFormula>
        <errorDisplayField>Parent_Topic__c</errorDisplayField>
        <errorMessage>Hierarchical topic relationships should not span more than 3 levels.</errorMessage>
    </validationRules>
